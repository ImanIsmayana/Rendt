  /! Landing section
  section#landing
    .container
      /! Main Content Inner
      .row.margin-lg.no-margin-bottom
        .col-lg-4.col-md-4.col-sm-6.visible-lg.visible-md.visible-sm
          /! Device Container
          img.img-responsive alt="" src="img/landing/landing-app-top.png"
          /! /Device Container
        /! Main landing content
        .landing-content.col-lg-8.col-md-8.col-sm-6.col-xs-12
          .landing-heading
            span.txt-xlg = @home.title
            / span.txt-xlg.txt-strong INFINITY
          .landing-text
            p.txt-md = @home.app_description
          .app-availability.no-padding
            ul.landing-available-on.list-unstyled.block
              li
                span.landing-availability.txt-sm Available for
              li
                i.fa.fa-tablet
              li
                i.fa.fa-mobile-phone
            / a.btn.btn-store.store-btn-repsonsive.no-padding href="#"
            /   .apple-btn
            / a.btn.btn-store.store-btn-repsonsive.no-padding href="#"
            = link_to(@home.google_play_url, class: "btn btn-store store-btn-responsive no-padding") do
              .google-btn
            / a.btn.btn-store.store-btn-repsonsive.no-padding href="#"
            /   .windows-btn
        /! /Main landing content
      /! /Main Content Inner
  /! /Landing section
  /! Features section
  section#features
    .container
      /! Features Content Inner
      .row.margin-lg.text-center
        .col-lg-12.text-center.margin-lg.no-margin-top
          span.section-light.section-title features
        .col-lg-4.col-md-4.col-sm-4.col-xs-6.margin-lg
          .app-overview-box.aob-left
            h3 = @home.features_one_title
            p = @home.features_one_description
          .app-overview-box.aob-left
