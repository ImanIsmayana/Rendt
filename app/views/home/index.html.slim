        .col-lg-4.col-md-4.col-sm-4.col-xs-6.margin-lg
          .app-overview-box.aob-right
            h3 = @home.features_two_title
            p = @home.features_two_description
          .app-overview-box.aob-right
            h3 = @home.features_four_title
